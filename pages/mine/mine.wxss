@keyframes living {
  0% {
    transform: scale(1);
    opacity: 0.5;
  }

  50% {
    transform: scale(1.5);
    opacity: 0; /*圆形放大的同时，透明度逐渐减小为0*/
  }

  100% {
    transform: scale(1);
    opacity: 0.5;
  }
}

