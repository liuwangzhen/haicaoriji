<!--pages/detail/detail.wxml-->
<view class='contain'>
  <swiper bindchange="change" style='height:{{height}}rpx;max-height:1000rpx;' circular='true' class="swiper">

    <swiper-item wx:for="{{list.img}}" wx:key="{{index}}" class="swiper-item">

      <image data-item="{{item}}" bindtap='previewImage' mode='widthFix' src="{{item}}" />

    </swiper-item>
  </swiper>
  <view class='count'>{{current+1}}/{{count}}</view>
  <view bindtap='goUser' class='user'>
    <image src='{{headimg}}'></image>
    <view class='nick'>{{nick}}</view>
  </view>
  <view class='content'>
    {{list.content}}
  </view>
  <view class='r2 zan'>
    <view style='margin-top:10rpx;'>{{date}}</view>
    <!-- <view style='font-size:50rpx' class='iconfont icon-tubiao_wuxing-1'></view> -->
  </view>
</view>
<view class='footer'>
  <view class='r1'>
    <view data-id="{{list.id}}" wx:if="{{list.collect==0}}" bindtap='collect' style='color:#fff;font-size:50rpx;' class='iconfont icon-xin1'></view>
    <view data-id="{{list.id}}" wx:if="{{list.collect==1}}" bindtap="nocollect" style='color:red;font-size:50rpx;' class='iconfont icon-xin'></view>
    <view style='color:#fff;margin-left:10rpx;'>{{list.collection}}</view>
  </view>
  <view class='line'>
  </view>
  <view class='r1'>
    <view style='color:#fff;font-size:50rpx;' class='iconfont icon-zhuanfa'></view>
    <view style='color:#fff;margin-left:10rpx;'>{{list.share}}</view>
  </view>
</view>