<!--pages/detail/detail.wxml-->

<view class='top'><text class='title'>{{nick}}</text></view>
<view wx:if="{{getshare==0}}" bindtap='goback' style='position:fixed;color:#000000;z-index:99;font-size:36rpx;left:10rpx;font-weight:bold;top:56rpx;' class='iconfont icon-fanhui'></view>
<view bindtap='goIndex' style='z-index:99;position:fixed;color:#000000;font-size:40rpx;left:84rpx;font-weight:bold;top:56rpx;' class='iconfont icon-shouye'></view>
<view class='pad'></view>
<view class='contain'>
  <swiper bindchange="change" style='height:{{height}}rpx;max-height:1000rpx;' circular='false' class="swiper">

    <swiper-item wx:for="{{list.img}}" wx:key="{{index}}" class="swiper-item">

      <image data-item="{{item}}" bindtap='previewImage' mode='widthFix' src="{{item}}" />

    </swiper-item>
  </swiper>
  <view class='count'>{{current+1}}/{{count}}</view>
  <view bindtap='goUser' class='user'>
    <image src='{{headimg}}'></image>
    <view class='nick'>{{nick}}</view>
  </view>
  <text class='content'>
    {{list.content}}
  </text>
  <view class='r2 zan'>
    <view style='margin-top:10rpx;'>{{date}}</view>
    <!-- <view style='font-size:50rpx' class='iconfont icon-tubiao_wuxing-1'></view> -->
  </view>
</view>
<view class='footer'>
  <view class='r1'>
    <view data-id="{{list.id}}" wx:if="{{list.collect==0}}" bindtap='collect' style='color:#fff;font-size:50rpx;margin-left:150rpx;' class='iconfont icon-xin1'></view>
    <view data-id="{{list.id}}" wx:if="{{list.collect==1}}" bindtap="nocollect" style='color:red;font-size:50rpx;margin-left:150rpx;' class='iconfont icon-xin'></view>
    <view style='color:#fff;margin-left:10rpx;'>{{list.collection}}</view>
  </view>
  <view class='line'>
  </view>
  <view style='position:absolute;left:500rpx;' class='r1'>
    <button open-type="share" bindtap='onShareAppMessage' class='share'>
    <view  style='color:#fff;font-size:50rpx;' class='iconfont icon-zhuanfa'></view>
    </button>
    <view style='color:#fff;margin-left:10rpx;'>{{share}}</view>
  </view>
</view>

