<!--pages/search/search.wxml-->
<view hidden="{{inputShowed}}" bindtap="showInput" class='nav'>
  <view style='color:black; position: absolute;margin-left: 65rpx;top:21rpx;z-index:999' class='iconfont icon-sousuokuang'></view>
  <view hover-class='none'>
    <input class="search" placeholder="大家都在搜" placeholder-class="search-p"></input>
  </view>
</view>
<view hidden="{{!inputShowed}}" class='nav'>
  <view style='color:black; position: absolute;margin-left: 65rpx;top:21rpx;z-index:999' class='iconfont icon-sousuokuang'></view>
  <view hover-class='none'>
    <input value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" class="search2" placeholder="大家都在搜" placeholder-class="search-p"></input>
  </view>
  <view class="cancel" bindtap="hideInput">取消</view>
  <view class="cancel" wx:if="{{inputVal!=''}}" bindtap="getList">搜索</view>
</view>
<view wx:if="{{list!=null}}" class='body'>
  <view class='title'>
    #{{title}}
  </view>
  <view class='number'>搜索到{{list.length}}篇笔记</view>
  <view class="content">
    <view class="left">
      <navigator url="../detail/detail?id={{item.id}}" wx:for="{{list}}" wx:key="">
        <template is="item" data="{{...item}}" wx:if="{{index%2==0}}"></template>
      </navigator>
    </view>
    <view class="right">
      <navigator url="../detail/detail?id={{item.id}}" wx:for="{{list}}" wx:key="">
        <template is="item" data="{{...item}}" wx:if="{{index%2==1}}"></template>
      </navigator>
    </view>
  </view>
  <!--  下面是一个模块 -->
  <template name="item">
    <view class="item">
      <image class="item-img" src="{{img[0]}}" mode="widthFix"></image>
      <view class="item-title-box">
        <view class="item-title">{{content}}</view>
        <!-- <image class="arrow" src="{{arr2[inedx].headimg}}"></image>   -->
        <view class='headimg'>
          <image class='img2' src='{{created_by.headimg}}'></image>
          <view class='nick'>{{created_by.nick}}</view>
          <view style='position:absolute;left:200rpx;margin-top:15rpx;' class='iconfont icon-xin1'></view>
          <!-- <view style='position:absolute;left:200rpx;margin-top:15rpx;color:red;' class='iconfont icon-xin'></view> -->
        </view>
      </view>

    </view>

  </template>

</view>
<view wx:if="{{list==null}}" class='body'>
  对不起，暂无搜索结果
</view>