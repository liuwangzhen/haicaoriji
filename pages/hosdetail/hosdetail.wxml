<view style='height:{{height4*2+20}}px' class='nav-wrap'>
  <view class='nav-title' style='line-height:{{height4*2 + 44}}px;'>海草日记</view>
  <view style='display: flex; justify-content: space-around;flex-direction: column'>
    <view class='nav-capsule' style='height:{{height4*2 + 48}}px;'>
      <view wx:if="{{getshare==0}}" bindtap='goback'>
        <image src='../../images/fanhui.png' mode='aspectFill' class='back-pre'></image>
      </view>
      <view bindtap='goIndex'>
        <image src='../../images/shouye22.png' mode='aspectFill' class='back-home'></image>
      </view>
      <view style='width:100%;height:{{height4*2+20}}px;background-color:#fff;'></view>
    </view>
  </view>
</view>

<view style='height:{{height4*2+20}}px;' class='pad'></view>
<view class='wait' wx:if="{{hospital==''}}">
  <image mode='widthFix' src='../../images/loading.svg'></image>
  <view class='f28 ml38'>加载中</view>
</view>
<view style='padding-bottom:50rpx;' wx:else>
  <swiper indicator-active-color="#58d1d3" indicator-dots="true" circular='false' class="swiper">
    <swiper-item wx:for="{{hospital.poster}}" wx:key="{{index}}" class="swiper-item">
      <image data-path="{{item.path}}" bindtap='previewImage' class="swiper-item" data-item="{{item}}" mode='aspectFill' src="{{item.path}}" />
    </swiper-item>
  </swiper>
  <view class='b f35 cen mt30'>{{hospital.name}}</view>
  <view class='cen f26 mt20 cc5'>
    <span wx:if="{{hospital.public==true}}" class='f26'>公立医院:</span>
    <span wx:else class='f26'>私立医院 : </span>
    <span class='ml10 f25'>{{hospital.score}}</span>
    <span wx:key="{{index}}" wx:for="{{score}}" style="color:#edbc3b;position:relative;top:3rpx;" class="iconfont icon-xingxing"></span>

  </view>
  <view bindtap='preview' class='f28 cen mt20 license'>查看医疗执业许可</view>
  <view class='line2'></view>
  <view wx:if="{{hospital.detail.length>100}}">
    <text class='mt30 f28 w670 ml30 text cc5 {{rotate==false ? "h1" : "h2"}}'>{{hospital.detail}}</text>
    <view bindtap='goRotate' wx:if="{{rotate==false}}" class='col rotate'>
      <view style='margin-top:20rpx;text-align:center;width:690rpx;position:relative;top:18rpx;color:#58c2db;opacity:0.5;' class='iconfont icon-xiangxia'></view>
      <view style='text-align:center;width:690rpx;color:#58c2db;opacity:0.7;' class='iconfont icon-xiangxia'></view>
    </view>
    <view bindtap='goRotate' wx:if="{{rotate==true}}" class='col rotate'>
      <view style='margin-top:20rpx;text-align:center;width:690rpx;position:relative;top:18rpx;color:#58c2db;transform:rotate(180deg);opacity:0.5;' class='iconfont icon-xiangxia'></view>
      <view style='text-align:center;width:690rpx;transform:rotate(180deg);color:#58c2db;opacity:0.7;' class='iconfont icon-xiangxia'></view>
    </view>
  </view>
  <view wx:if="{{hospital.detail.length<=100}}">
    <text class='mt30 f28 w670 ml30 text cc5'>{{hospital.detail}}</text>
  </view>
  <view class=' mt30 f28 w670 ml30 cc5 '>地址：{{hospital.address}}</view>
  <view class='line3 mt20 '></view>
  <view class='contain ml30 mt40 f30 '>
    <view class='r1'>
      <view class='b mt20 pb20'>本院医师</view>
      <view bindtap='goDoctors' class='more f28 cc5'>更多医师
        <span style="font-size:26rpx;position:relative;top:-1rpx;" class="iconfont icon-qianjin"></span>
      </view>
    </view>
    <view data-id='{{item.id}}' bindtap='goDoctor' class='r1 doctor f28 ' wx:key="{{item.id}}" wx:for="{{doctors}}">
      <image mode='aspectFill ' class='img ' src='{{item.headimg.path}} '></image>
      <view class='col ml30 mt20 '>
        <view class='f32 b '>{{item.name}}</view>
        <view class='r1 mt10 cc5 '>
          <view>{{item.job}}</view>
          <view class='line ml20 '></view>
          <view wx:if="{{item.time==null||item.time==0}}" class='ml20 '>1年经验</view>
          <view wx:else class='ml20 '>{{item.time}}年经验</view>
        </view>
        <view class='r1 cbc mt10 '>
          <view style='color:#58c2db;font-size:30rpx;position:relative;top:5rpx;' class='iconfont icon-dianzan'></view>
          <view class='ml10 '>{{item.superiority}}</view>
        </view>
      </view>
    </view>
  </view>
</view>