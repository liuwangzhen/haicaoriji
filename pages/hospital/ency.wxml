<view class='w100p bg-fff'>
  <view class='r1 proency'>
    <view bindtap='pickPro' data-idx="{{index}}" class='col proitem {{index==curId?"border":""}}' wx:for="{{title}}" wx:key="{{index}}">
      <image class='proimg mt10' src='{{item.src}}' mode='aspectFill'></image>
      <view class='{{index==curId?"f32 b c00":"c9b f32"}} cen mt20'>{{item.name}}</view>
    </view>
  </view>
  <view wx:if="{{curId==0}}" class='cen f28 b c00 mt20'>热门项目</view>
  <view wx:else class='cen f28 b c00 mt20'>热门品牌</view>
  <scroll-view scroll-x="true" class='scroll mt20'>
    <view wx:if="{{curId==0}}" class='r1'>
      <view wx:key="{{index}}" wx:for="{{proTwo}}" class='col {{index==0?"ml40":"ml30"}} {{index==proTwo.length-1 ?"pr20":""}}'>
        <image mode='aspectFill' class='projectimg' src='{{item.proImage.path}}'></image>
        <view class='f24 b mt20 cen '>{{item.proName}}</view>
      </view>
    </view>
  </scroll-view>
  <view class='projectLine ml40'></view>
  <view class='ml40 col'>
    <view class='mt20 f28' wx:key="{{index}}" wx:for="{{projectDetail}}">
      <view class='r1 mt20'>
        <view class='projectNameLine'></view>
        <view class='f30 ml20 b'>{{item.proName}}</view>
        <view style='position:absolute;right:40rpx;color:#ddd;margin-top:2rpx;' class='iconfont2 icon-qianjin'></view>
      </view>
      <view class='r1 ml8 r-wrap'>
        <view wx:key="{{index}}" wx:for="{{item.sm_project}}" class='sm-project ml20 mt20'>{{item}}</view>
      </view>
    </view>
  </view>
</view>