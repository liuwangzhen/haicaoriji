.rotate{
  animation:mymove 10s infinite;
  z-index: 4;
}
.animate{
  animation: action 1s infinite;
}
.animate2{
  animation: action2 1s infinite;
}
.animate3{
  animation: action3 1s infinite;
}
@keyframes action
{
  0%{height: 30rpx;}
  50%{height: 45rpx;}
  100%{height: 60rpx;}
}
@keyframes action2
{
  0%{height: 60rpx;}
  50%{height: 45rpx;}
  100%{height: 30rpx;}
}
@keyframes action3
{
  0%{height: 30rpx;}
  50%{height: 45rpx;}
  100%{height: 60rpx;}
}
@keyframes mymove
{
  0% {transform: rotate(0deg)}
25%  {transform:rotate(90deg);}
50%  {transform:rotate(180deg);}
75%  {transform:rotate(270deg);}
100% {transform:rotate(360deg);}
}
